<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/settings_color_selected_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/dialog_color_settings_title"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/settings_screen_textview_color"/>

    <ImageView
        android:id="@+id/settings_color_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/settings_color_selected_view_margin"
        android:background="@drawable/rounded_circle"/>

</RelativeLayout>