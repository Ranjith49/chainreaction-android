        android:layout_marginLeft="@dimen/alert_dialog_padding_horizantal"
        android:layout_marginTop="@dimen/alert_dialog_padding_vetical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/alertDialog_textview_color"
